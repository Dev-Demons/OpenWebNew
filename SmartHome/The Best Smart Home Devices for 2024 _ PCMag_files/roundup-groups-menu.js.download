window.roundupGroupsMenu=function(){return{links:[],linkNodes:[],activeNode:null,showCategories:false,autoExpandCategories:false,selectNode:function(id){return document.querySelector('#roundup-group-menu a[href^="#'+id+'"]');},highlightLink:function(node){node.parentNode.classList.add('bg-gray-100');node.classList.add('text-gray-700');},removeHighlightLink:function(node){node.parentNode.classList.remove('bg-gray-100');node.classList.remove('text-red-400');},initRoundupGroupsMenu:function(links){if(links){this.links=links;this.linkNodes=links.map(function(link){return document.getElementById(link.anchor);});}},scroll:function(){var anchorIndecies=this.linkNodes.filter(function(node){return(window.scrollY+window.innerHeight/2)>node.offsetTop;});if(anchorIndecies.length==0){return;}
this.autoExpandCategories=anchorIndecies.length>9?true:false;var activeLink=this.links[(anchorIndecies.length-1)];if(this.activeNode!=null){this.removeHighlightLink(this.activeNode);}
if(activeLink.anchor=='article'){return;}
this.activeNode=this.selectNode(activeLink.anchor);this.highlightLink(this.activeNode);}}}